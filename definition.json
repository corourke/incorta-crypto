{
  "icon": "./assets/crypto-icon.png",
  "name": "incorta-crypto",
  "hint": "Display cryptocurrency dashboard tiles with market prices from portfolio data",
  "options": {
    "aggregation": true,
    "individualFilter": true,
    "aggregateFilter": true
  },
  "settings": [
    {
      "name": {
        "key": "Configuration"
      },
      "settings": [
        {
          "name": {
            "key": "Max Tiles"
          },
          "key": "maxTiles",
          "defaultValue": 4,
          "type": "number"
        }
      ]
    }
  ],
  "bindingsTrays": [
    {
      "key": "coin_id",
      "name": "Coin-ID",
      "queryRole": "row",
      "minCount": 1,
      "maxCount": 1,
      "settings": [
        {
          "name": "Sorting",
          "settings": [
            {
              "type": "sort",
              "key": "coinid-sort-key",
              "name": "Sort"
            }
          ]
        }
      ]
    },
    {
      "key": "quantity",
      "name": "Quantity",
      "queryRole": "measure",
      "minCount": 1,
      "maxCount": 1
    }
  ]
}
